#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <wait.h>

int main() {
  char *buff = NULL;
  size_t size = 0;
  ssize_t characters;

  while(1) {
    printf("> ");
    characters = getline(&buff, &size, stdin);

    if (characters == -1) {
      perror("getline failed");
      exit(EXIT_FAILURE);
    }
  }






}
