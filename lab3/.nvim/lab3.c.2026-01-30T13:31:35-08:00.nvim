#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>

int main() {
  char *input = NULL;
  size_t size = 0;
  ssize_t characters;

  while (1) {
    printf("Enter input: ");
    characters = getline(&input, &size, stdin);

    free(input);
    return 0;
  }
}
